@model IEnumerable<ShiningInfomation.Entity.StudentInfo>


@{
    ViewBag.Title = "学生信息";
}

<h2>学生信息</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAlias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupNum)
